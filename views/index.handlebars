<h1>Burgers!</h1>

<h2>New Burgers</h2>

<ul>
    {{#each burgers}}
        {{#unless devoured}}
            {{> burgers/burger-block devoured=false}}
        {{/unless}}
    {{/each}}
</ul>

<h2>Devoured Burgers</h2>

<ul>
    {{#each burgers}}
        {{#if devoured}}
            {{> burgers/burger-block devoured=true}}
        {{/if}}
    {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">
    <div class="form-group">
        <label for="burg">Burger Title:</label>
        <input type="text" id="burg" name="burger">
    </div>

    <div class="form-group">
        <label for="devoured">Devoured it!</label><br>
        <input type="button" name="devoured">Devoured!<br>
    </div>

    <button type="submit">Add Burger</button>
</form>